# Backend Configuration - .NET 9 API
VITE_API_BASE_URL=http://localhost:5000/api/v1

# Production API URL (when deployed)
# VITE_API_BASE_URL=https://your-dotnet-api.azurewebsites.net/api/v1

# Environment
VITE_NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_NAME=TesorosChoc√≥
VITE_APP_VERSION=1.0.0

# Authentication
VITE_JWT_SECRET_KEY=your-secret-key-here
VITE_JWT_EXPIRES_IN=3600
VITE_JWT_REFRESH_BUFFER_TIME=300000
VITE_AUTH_TOKEN_STORAGE_KEY=choco_access_token

# CORS Settings
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
VITE_LOG_LEVEL=debug
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ERROR_LOGGING=true

# Feature Flags
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEV_TOOLS=true

# Storage
VITE_STORAGE_TYPE=localStorage
VITE_CACHE_TTL=300000

# Upload Settings
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Performance
VITE_REQUEST_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
