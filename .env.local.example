# Archivo de configuración local para desarrollo con .NET 9
# Copia este archivo como .env.local y ajusta las configuraciones según tu setup

# API Configuration
VITE_API_BASE_URL=https://localhost:7001
VITE_API_SECURE=true

# Si tu API .NET 9 corre en un puerto diferente, cámbialo aquí:
# VITE_API_BASE_URL=https://localhost:5001

# Para desarrollo con certificados auto-firmados:
# NODE_TLS_REJECT_UNAUTHORIZED=0

# App Configuration
VITE_APP_NAME=Tesoros del Chocó
VITE_APP_VERSION=1.0.0

# Feature Flags específicas para .NET 9
VITE_ENABLE_API_INTEGRATION=true
VITE_ENABLE_PROBLEM_DETAILS=true
VITE_ENABLE_API_VERSIONING=true
VITE_ENABLE_CORRELATION_ID=true

# Debug Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Authentication
VITE_JWT_EXPIRY_BUFFER=300000
VITE_REFRESH_TOKEN_ENABLED=true

# Upload limits (ajustar según tu API .NET)
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Analytics (opcional)
VITE_ENABLE_ANALYTICS=false
